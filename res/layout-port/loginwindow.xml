<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"  android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#4477ee">
	
<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/username" android:textColor="#00ccff" android:textStyle="bold" android:typeface="sans"/>
<AutoCompleteTextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tusername" android:text="@string/tusername"></AutoCompleteTextView> 

<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/password" android:textStyle="bold" android:typeface="sans" android:textColor="#44ffdd"></TextView>
<EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/tpassword" android:text="@string/tpassword" android:password="true"></EditText>
<CheckBox
		android:id="@+id/cbsavelogin"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:text="Save Login"/>
<CheckBox
		android:id="@+id/cbautologin"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:text="Auto Login"/> 
<RelativeLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="wrap_content">

		
<Button android:id="@+id/Button01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="       OK        " android:layout_alignParentLeft="true" android:layout_marginLeft="20dip"></Button>
<Button android:id="@+id/Button02" android:layout_height="wrap_content" android:text="     CLOSE     " android:layout_width="wrap_content" android:layout_alignParentRight="true"  android:layout_alignTop="@id/Button01" android:layout_marginRight="20dip"></Button>
</RelativeLayout> 

<TextView  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/logininfo" android:textColor="#ff6666" android:typeface="sans" android:textSize="17px" android:layout_marginLeft="13dip" android:layout_marginRight="13dip"></TextView>
 
</LinearLayout>
